package com.tcc.transformer.items.wood;

import net.minecraft.creativetab.CreativeTabs;
import net.minecraft.item.Item;
import net.minecraft.item.ItemStack;

public class Darkoak extends Item {

    public Darkoak() {
            maxStackSize = 1;
            setCreativeTab(CreativeTabs.tabMisc);
            setUnlocalizedName("oakWood");
            setTextureName("tcc:oak");
            setMaxDamage(128);

    }
            
            
            @Override
            public boolean doesContainerItemLeaveCraftingGrid(ItemStack itemstack)
            {
                    return itemstack.getItemDamage()<127;
            }
           
            @Override
            public ItemStack getContainerItem(ItemStack itemStack)
            {
               ItemStack cStack = itemStack.copy();
               cStack.setItemDamage(cStack.getItemDamage() + 1);
               cStack.stackSize = 1;
               return cStack;
            }
    

}